{
    "name": "StayKedarnath - Follow-up Reminder",
    "nodes": [
        {
            "parameters": {
                "rule": {
                    "interval": [
                        {
                            "field": "hours",
                            "hoursInterval": 4
                        }
                    ]
                }
            },
            "id": "schedule-trigger",
            "name": "Every 4 Hours",
            "type": "n8n-nodes-base.scheduleTrigger",
            "typeVersion": 1.2,
            "position": [
                250,
                300
            ]
        },
        {
            "parameters": {
                "operation": "getAll",
                "table": "stay_leads",
                "returnAll": false,
                "limit": 50,
                "filters": {
                    "filter": [
                        {
                            "column": "status",
                            "condition": "in",
                            "value": "new,contacted,quote_sent"
                        },
                        {
                            "column": "created_at",
                            "condition": "lte",
                            "value": "={{ $now.minus({ hours: 24 }).toISO() }}"
                        }
                    ]
                },
                "options": {}
            },
            "id": "get-stale-leads",
